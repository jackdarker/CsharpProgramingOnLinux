<Window      xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AvaloniaApp_VS.ViewModels"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="vm:AboutViewModel"
             mc:Ignorable="d"
            x:Class="AvaloniaApp_VS.Views.AboutView"
            Title="AboutView">
	<Expander VerticalAlignment="Top">
		<Expander.Header>
			Hidden Search
		</Expander.Header>
		<Grid RowDefinitions="*,*" ColumnDefinitions="150,*">
			<TextBlock Grid.Row="0" Grid.Column="0"
					   VerticalAlignment="Center">Search</TextBlock>
			<TextBox Grid.Row="0" Grid.Column="1"
					 Watermark="Search text" Width="200" />
			<TextBlock Grid.Row="1" Grid.Column="0"
					   VerticalAlignment="Center">Case sensitive?</TextBlock>
			<CheckBox Grid.Row="1" Grid.Column="1" />
		</Grid>
	</Expander>
</Window>
