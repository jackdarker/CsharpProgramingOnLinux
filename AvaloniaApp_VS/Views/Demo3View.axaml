<UserControl x:Class="AvaloniaApp_VS.Views.Demo3View"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AvaloniaApp_VS.ViewModels"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="vm:Demo3ViewModel"
             mc:Ignorable="d">
	<Design.DataContext>
		<vm:Demo3ViewModel />
	</Design.DataContext>
	<UserControl.Styles>
		<Style Selector="ToggleButton PathIcon.audio-on">
			<Setter Property="IsVisible" Value="False"/>
		</Style>
		<Style Selector="ToggleButton:checked PathIcon.audio-on">
			<Setter Property="IsVisible" Value="True"/>
		</Style>
		<Style Selector="ToggleButton PathIcon.audio-mute">
			<Setter Property="IsVisible" Value="True"/>
		</Style>
		<Style Selector="ToggleButton:checked PathIcon.audio-mute">
			<Setter Property="IsVisible" Value="False"/>
		</Style>
	</UserControl.Styles>
	<StackPanel VerticalAlignment="Center" Spacing="5" MaxWidth="350">
		<Button Click="Button_Click" IsEnabled="False">Disabled</Button>
		<Button Click="Button_Click" IsVisible="False">Hidden</Button>
		<Button Click="Button_Click" ClickMode="Press">Triggers on Press</Button>
		<Button Click="Button_Click" ClickMode="Release">Triggers on Release</Button>
		<ToggleButton IsChecked="True" Click="Button_Click">
			<Panel>
				<PathIcon Classes="audio-on" Data="{StaticResource speaker_regular}" />
				<PathIcon Classes="audio-mute" Data="{StaticResource speaker_off_regular}" />
			</Panel>
		</ToggleButton>
		<SplitButton Click="SplitButton_Click" Content="Select some..." >
			<SplitButton.Flyout>
				<MenuFlyout Placement="Bottom">
					<MenuItem Header="Item 1">
						<MenuItem Click="SplitButton_Click" Header="Subitem 1" />
						<MenuItem Click="SplitButton_Click" Header="Subitem 2" />
						<MenuItem Click="SplitButton_Click" Header="Subitem 3" />
					</MenuItem>
					<MenuItem Click="SplitButton_Click" Header="Item 2" InputGesture="Ctrl+A" />
					<MenuItem Click="SplitButton_Click" Header="Item 3" />
				</MenuFlyout>
			</SplitButton.Flyout>
		</SplitButton>
		<RepeatButton Click="Button_Click" Delay="200" Interval="500">Repeats when keeping pressed</RepeatButton>
		<TextBlock Margin="0 10 0 5">Radio Group</TextBlock>
		<RadioButton Click="Button_Click" GroupName="Second Group"  Content="Fourth Option"/>
		<RadioButton Click="Button_Click" GroupName="Second Group"  Content="Fifth Option"/>
		
		<TextBlock Margin="0 10" x:Name="message">Ready...</TextBlock>
		
	</StackPanel>
</UserControl>