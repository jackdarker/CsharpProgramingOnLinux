<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AvaloniaApp_VS.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        x:Class="AvaloniaApp_VS.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaApp_VS"
        x:CompileBindings="True"
        x:DataType="vm:MainWindowViewModel"
        >

	<Design.DataContext>
		<vm:MainWindowViewModel />
	</Design.DataContext>

	<Grid ShowGridLines="True" 
		  RowDefinitions="*,Auto" Margin="10"
		  ColumnDefinitions="Auto,*" >
		<TransitioningContentControl Grid.Column="1" Grid.Row="0" Content="{Binding CurrentPage}" />

		<StackPanel Grid.Row="0" Grid.Column="0"  Orientation="Vertical" Spacing="5"
					HorizontalAlignment="Left">
			<Button Command="{Binding Navigate1Command}" Content="Welcome" />
			<Button Command="{Binding Navigate2Command}" Content="Email" />
		</StackPanel>
		<StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Spacing="5"
					HorizontalAlignment="Right">
			<Button Command="{Binding NavigatePreviousCommand}" Content="Back" />
			<Button Command="{Binding NavigateNextCommand}" Content="Next" />
		</StackPanel>
	</Grid>
</Window>